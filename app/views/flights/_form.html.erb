      <ul>
      <% flight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :flight_num %>
    <%= form.number_field :flight_num, id: :flight_num  %>
  </div>

  <div class="field">
    <%= form.label :origin %>
    <%= form.text_area :origin, id: :flight_origin %>
  </div>

  <div class="field">
    <%= form.label :destination %>
    <%= form.text_area :destination, id: :flight_destination %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :plane_id %>
    <%= form.collection_select :plane_id, Plane.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
